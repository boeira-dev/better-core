{
  "name": "better-core",
  "version": "3.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^38.1.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.Better-Core2.id",
    "productName": "Better-Core",
    "files": [
      "**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "SteinMarcelo",
        "repo": "better-core"
      }
    ]
  },
  "dependencies": {
    "electron-updater": "^6.6.2"
  },
  "description": "\"# better-core\" \r \"# better-core\"",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SteinMarcelo/better-core.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/SteinMarcelo/better-core/issues"
  },
  "homepage": "https://github.com/SteinMarcelo/better-core#readme"
}
