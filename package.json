{
  "name": "better-core",
  "version": "2.5.1",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.Better-Core2.id",
    "productName": "Better-Core",
    "files": [
      "**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "SteinMarcelo",
        "repo": "better-core"
      }
    ]
  },
  "dependencies": {
    "electron-updater": "^6.6.2"
  }
}
